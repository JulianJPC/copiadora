    <resources base="http://0.0.0.0/ws/login/"> 
        <resource path="login">
            <method name="POST" id="login">
                <request>
                    <param name="username" type="xsd:string" style="matrix" required="true" />
                    <param name="password" type="xsd:string" style="matrix" required="true" />
                </request>
                <response status="200">
                    <representation mediaType="application/json" element="lg:loginResponseDto" />
                </response>
            </method>
        </resource>
        

